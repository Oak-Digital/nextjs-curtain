{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "example",
        "node_modules"
    ]
}
